// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "project",
    "image": "mcr.microsoft.com/devcontainers/python:0-3.11",

    // Set-up VScode
    "customizations": {
        "vscode": {
            "settings": {
                "remote.autoForwardPorts": false,
                "jupyter.kernels.excludePythonEnvironments": ["/usr/bin/python3"]
            },
            "extensions": [
                "-dbaeumer.vscode-eslint",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "streetsidesoftware.code-spell-checker"
            ]
        }
    },
	
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [8080],

    // Set name for forwarded ports
    "portsAttributes": {
        "8080": {
            "label": "spark-WebUI"
        }
    },

    // Set-up Python stuff and Spark
    "onCreateCommand": ".devcontainer/install_spark.sh && .devcontainer/install_gh.sh && .devcontainer/setup_project.sh",
	
    // Start Spark whenever we attach to the container, and leave htop running in a terminal
    "postAttachCommand": ".devcontainer/start_worker.sh && htop"
}
